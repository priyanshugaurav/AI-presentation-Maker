<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generated Presentation</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to your CSS file -->
</head>
<body>
    <h1>Generated Presentation</h1>
    <% slides.forEach((slide, index) => { %>
        <canvas id="slide<%= index + 1 %>" class="slideCanvas"></canvas>
    <% }); %>
    <script>
        // JavaScript to draw each slide on its respective canvas
        <% slides.forEach((slide, index) => { %>
            var canvas<%= index + 1 %> = document.getElementById('slide<%= index + 1 %>');
            var ctx<%= index + 1 %> = canvas<%= index + 1 %>.getContext('2d');

            // Draw slide title
            ctx<%= index + 1 %>.font = 'bold 24px Arial';
            ctx<%= index + 1 %>.fillStyle = '#000';
            ctx<%= index + 1 %>.fillText('<%= slide["Slide " + (index + 1)].title %>', 10, 30);

            // Draw slide content
            ctx<%= index + 1 %>.font = '16px Arial';
            ctx<%= index + 1 %>.fillStyle = '#333';
            var contentLines<%= index + 1 %> = `<%= slide["Slide " + (index + 1)].content %>`.split('\n');
            var lineHeight<%= index + 1 %> = 25;
            var startY<%= index + 1 %> = 70;
            contentLines<%= index + 1 %>.forEach(function(line, i) {
                ctx<%= index + 1 %>.fillText(line, 10, startY<%= index + 1 %> + i * lineHeight<%= index + 1 %>);
            });
        <% }); %>
    </script>
</body>
</html>
